{% set blog_image = page.media.images|first.cropZoom(800,400) %}
<a href="{{ page.url }}" class="post post-item">

    <amp-img src="{{ blog_image.url }}" alt="{{ page.title }}" layout="responsive" width="800" height="400"></amp-img>
    <div class="caja-texto">
        <h2>{{ page.title }}</h2><br>
        <time datetime="{{ page.date|date("c") }}">
            <span>{{ page.date|date("d") }} <strong>/</strong> {{ page.date|date("m") }} <strong>/</strong> {{ page.date|date("Y") }}</span>
        </time>
    </div>

    {% if show_prev_next %}
        <p class="prev-next">
            {% if not page.isFirst %}
                <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ 'BLOG.ITEM.NEXT_POST'|t }}</a>
            {% endif %}

            {% if not page.isLast %}
                <a class="button" href="{{ page.prevSibling.url }}">{{ 'BLOG.ITEM.PREV_POST'|t }} <i class="fa fa-chevron-right"></i></a>
            {% endif %}
        </p>
    {% endif %}
</a>
