<style amp-custom> 
  @font-face { font-family: 'tc2018'; src:  url('{{theme_url}}/fonts/tc2018.eot?plb917'); src:  url('{{theme_url}}/fonts/tc2018.eot?plb917#iefix') format('embedded-opentype'), url('{{theme_url}}/fonts/tc2018.ttf?plb917') format('truetype'), url('{{theme_url}}/fonts/tc2018.woff?plb917') format('woff'), url('{{theme_url}}/fonts/tc2018.svg?plb917#tc2018') format('svg'); font-weight: normal; font-style: normal; }

  {% include 'main.css' %}

  {% if page_type == 'type_post' %}
    {% set custom_post = true %}
  {% elseif page_type == 'type_work' %}
    {% set custom_post = true %}
  {% elseif page_type == 'page_home' %}
    {% set custom_home = true %}
  {% elseif page_type == '404' %}
    {% set custom_404 = true %}
  {% endif %}

  {% if custom_post %}
    header .scroll { background: {{page.header.color}} url({{blog_image.url}}) no-repeat center center; background-size: cover; } header .fondo-fijo { background: {{page.header.color}}; } header .logo-svg svg{ fill: {{logo}}; } header .tc-menu { color: {{logo}}; } a { color: {{pageColor}}; background-color: transparent; transition: all 0.5s ease; } a:hover { background-color: {{pageColor}}; color: #ffffff; } h1 { color: {{pageColor}}; text-align: center; } h2, h3, h4, h5, h6 { color: {{pageColor}}; } .post .data { border-top-color: {{pageColor}}; } footer { background: {{pageColor}}; color: {{logo}}; } .post .button {border-color: {{page.header.color}}} footer a span {color: {{logo}}} .social a {color: transparent;} .post .social a em, .work .social a em { color: {{page.header.color}};} .breadcrum a {color: {{page.header.color}}} .breadcrum a:hover {color: {{logo}}; background: {{page.header.color}}}

  {% elseif custom_home %}
    .main { padding-top: 38vw}

  {% elseif custom_404 %}
    header .scroll { background: {{page.header.color}} url({{blog_image.url}}) repeat center center; }

  {% endif %}
</style>